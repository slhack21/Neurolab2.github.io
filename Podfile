platform :ios, '10.0'  # Minimum version d'ios que tu supportes

target 'NeurolabApp' do  # Remplace 'NeurolabApp' par le nom de ton projet
  use_frameworks!  # Cela permet d'utiliser des frameworks dans ton projet

  # Ajouter Firebase et les services que tu utilises
  pod 'Firebase/Core'
  pod 'Firebase/Auth'        # Pour l'authentification Firebase
  pod 'Firebase/Firestore'   # Pour la base de données Firestore
  pod 'Firebase/Storage'     # Si tu veux utiliser le stockage Firebase pour les images/vidéos
end